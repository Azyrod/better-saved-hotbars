{
  "schemaVersion": 1,
  "id": "bettersavedhotbars",
  "version": "${version}",
  "name": "Better Saved Hotbars Forked",
  "description": "This mod allows you to drag items into the saved hotbars tab and remove them by middle clicking!",
  "authors": [
    "LukynkaCZE", "Azyrod"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/better-saved-hotbars-forked",
    "sources": "https://github.com/Azyrod/better-saved-hotbars",
    "issues": "https://github.com/Azyrod/better-saved-hotbars/issues"
  },
  "license": "CC0 1.0 Universal",
  "icon": "assets/bettersavedhotbars/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "cz.lukynka.bettersavedhotbars.BetterSavedHotbars"
    ]
  },
  "mixins": [
    "bettersavedhotbars.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": ">=${minecraft_version}",
    "java": ">=21",
    "fabric": "*"
  }
}
